            "type": "string",
            "format": "uuid"
          },
          "accountId": {
            "type": "string",
            "format": "uuid"
          },
          "type": {
            "type": "string",
            "enum": ["deposit", "withdrawal", "swap"]
          },
          "amount": {
            "type": "string"
          },
          "balance": {
            "type": "string"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "DepositAddress": {
        "type": "object",
        "properties": {
          "address": {
            "type": "string",
            "example": "0x1234567890abcdef1234567890abcdef12345678"
          },
          "asset": {
            "type": "string",
            "example": "USDT"
          },
          "network": {
            "type": "string",
            "example": "ERC20"
          },
          "tag": {
            "type": "string",
            "nullable": true,
            "example": null
          }
        }
      },
      "Deposit": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "example": "019bea7a-5961-72b8-99cb-4426859fd0e9"
          },
          "asset": {
            "type": "string",
            "example": "USDT"
          },
          "network": {
            "type": "string",
            "example": "TRC20"
          },
          "amount": {
            "type": "string",
            "example": "100.00"
          },
          "status": {
            "type": "string",
            "enum": ["pending", "processing", "completed", "failed"]
          },
          "txHash": {
            "type": "string",
            "example": "0xabcdef1234567890abcdef1234567890abcdef1234567890abcdef1234567890"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Quote": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "example": "019bdaf7-4d34-768e-b13b-11b92eb3bd53"
          },
          "sourceAsset": {
            "type": "string",
            "example": "USDT"
          },
          "destinationAsset": {
            "type": "string",
            "example": "IDR"
          },
          "sourceAmount": {
            "type": "string",
            "example": "100"
          },
          "destinationAmount": {
            "type": "string",
            "example": "1567500.00"
          },
          "exchangeRate": {
            "type": "string",
            "example": "15675.00"
          },
          "expiresAt": {
            "type": "string",
            "format": "date-time"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Swap": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "example": "019bdf49-ef7c-7a4b-a09a-3446e48dd8d5"
          },
          "quoteId": {
            "type": "string",
            "format": "uuid"
          },
          "referenceId": {
            "type": "string",
            "example": "mex-ref-1230-test-3"
          },
          "sourceAsset": {
            "type": "string",
            "example": "USDT"
          },
          "destinationAsset": {
            "type": "string",
            "example": "IDR"
          },
          "sourceAmount": {
            "type": "string",
            "example": "100"
          },
          "destinationAmount": {
            "type": "string",
            "example": "1567500.00"
          },
          "status": {
            "type": "string",
            "enum": ["pending", "processing", "completed", "failed"]
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Pagination": {
        "type": "object",
        "properties": {
          "page": {
            "type": "integer",
            "example": 1
          },
          "limit": {
            "type": "integer",
            "example": 10
          },
          "totalPages": {
            "type": "integer",
            "example": 5
          },
          "totalItems": {
            "type": "integer",
            "example": 50
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "example": "QUOTE_INVALID_AMOUNT"
          },
          "message": {
            "type": "string",
            "example": "Invalid amount specified for quote"
          },
          "details": {
            "type": "object",
            "additionalProperties": true
          }
        }
      }
    }
