{
  "openapi": "3.0.3",
  "info": {
    "title": "NAH Crypto Exchange Aggregator Service API",
    "description": "API documentation for the CEX Aggregator Service",
    "version": "1.0.0",
    "contact": {
      "name": "API Support"
    }
  },
  "servers": [
    {
      "url": "{baseUrl}/v1.0",
      "description": "Base API Server",
      "variables": {
        "baseUrl": {
          "default": "https://api.example.com",
          "description": "Base URL for the API"
        }
      }
    }
  ],
  "security": [
    {
      "BearerAuth": []
    }
  ],
  "paths": {
    "/access-token": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Generate Access Token",
        "description": "Generate an access token using client credentials",
        "security": [],
        "parameters": [
          {
            "name": "X-SIGNATURE",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "RSA signature of the payload"
          },
          {
            "name": "X-CLIENT-ID",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Client ID"
          },
          {
            "name": "X-TIMESTAMP",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date-time"
            },
            "description": "ISO timestamp with offset"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "grantType": {
                    "type": "string",
                    "enum": ["client_credentials"]
                  }
                },
                "required": ["grantType"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully generated access token",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "accessToken": {
                      "type": "string",
                      "description": "Bearer token for API authentication"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/assets": {
      "get": {
        "tags": ["Supporting Information"],
        "summary": "Get Supported Digital Asset",
        "description": "Retrieve information about supported digital assets",
        "parameters": [
          {
            "name": "accountId",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "example": "019b968c-2bee-7613-8307-037bc66e75c9"
          },
          {
            "name": "asset",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "example": "USDT"
          },
          {
            "name": "network",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "example": "ERC20"
          }
        ],
        "responses": {
          "200": {
            "description": "List of supported assets",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Asset"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/pairs": {
      "get": {
