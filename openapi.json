  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Bearer token obtained from /access-token endpoint"
      }
    },
    "schemas": {
      "Asset": {
        "type": "object",
        "properties": {
          "asset": {
            "type": "string",
            "example": "USDT"
          },
          "network": {
            "type": "string",
            "example": "ERC20"
          },
          "name": {
            "type": "string",
            "example": "Tether USD"
          },
          "minDeposit": {
            "type": "string",
            "example": "10"
          },
          "withdrawalFee": {
            "type": "string",
            "example": "1"
          }
        }
      },
      "SwapPair": {
        "type": "object",
        "properties": {
          "sourceAsset": {
            "type": "string",
            "example": "USDT"
          },
          "destinationAsset": {
            "type": "string",
            "example": "IDR"
          },
          "enabled": {
            "type": "boolean",
            "example": true
          }
        }
      },
      "Account": {
        "type": "object",
