    "/deposits/addresses": {
      "post": {
        "tags": ["Deposits"],
        "summary": "Create Deposit Address",
        "description": "Create a new deposit address for an asset and network",
        "parameters": [
          {
            "name": "X-SANDBOX-DEPOSIT",
            "in": "header",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Sandbox deposit amount",
            "example": "100"
          },
          {
            "name": "X-SANDBOX-SIMULATE",
            "in": "header",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Sandbox simulation status",
            "example": "completed"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "asset": {
                    "type": "string",
                    "example": "USDT"
                  },
                  "network": {
                    "type": "string",
                    "example": "ERC20"
                  }
                },
                "required": ["asset", "network"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Deposit address created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DepositAddress"
                }
              }
            }
          }
        }
      }
    },
    "/deposits": {
      "get": {
        "tags": ["Deposits"],
        "summary": "Get Deposit Transactions",
        "description": "Retrieve list of deposit transactions with optional filters",
        "parameters": [
          {
            "name": "asset",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "example": "USDT"
          },
          {
            "name": "network",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "example": "TRC20"
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 10
            },
            "example": 1
          },
          {
            "name": "page",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1
            },
            "example": 3
          }
        ],
        "responses": {
          "200": {
            "description": "List of deposit transactions",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Deposit"
                      }
                    },
                    "pagination": {
                      "$ref": "#/components/schemas/Pagination"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/deposits/{id}": {
